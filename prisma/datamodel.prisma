type User {
  id: ID! @unique
  email: String @unique
  name: String!
  knobs: [Knob!]!
}

type Pedal {
  id: ID! @unique
  name: String!
  width: Float!
  height: Float!
  selectedComponent: Knob @relation(name: "SelectedKnob")
  knobs: [Knob!]! @relation(name: "ListKnobsOnPedal")
}

type Knob {
  id: ID! @unique
  type: String!
  description: String!
  builder: User
  cx: Float
  cy: Float
  r: Float
  angle: Float
  width: Float
  pedal: Pedal @relation(name: "ListKnobsOnPedal")
}
