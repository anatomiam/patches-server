type User {
  id: ID! @unique
  email: String! @unique
  name: String! @unique
}

type Pedal {
  id: ID! @unique
  builder: User
  name: String!
  width: Float!
  height: Float!
  color: String!
  knobs: [Knob!]! @relation(name: "ListKnobsOnPedal")
}

type Knob {
  id: ID! @unique
  type: String!
  description: String!
  color: String!
  cx: Float
  cy: Float
  r: Float
  angle: Float
  width: Float
  pedal: Pedal @relation(name: "ListKnobsOnPedal")
}

type Patch {
  id: ID! @unique
  preset: Preset
  knob: Knob
  angle: Float!
}

type Preset {
  id: ID! @unique
  user: User
  pedal: Pedal
  name: String!
  description: String!
  patches: [Patch!]
}
