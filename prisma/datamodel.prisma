type User {
  id: ID! @unique
  email: String! @unique
  name: String! @unique
}

type Pedal {
  id: ID! @unique
  builder: User
  name: String!
  width: Float!
  height: Float!
  color: String!
  knobs: [Knob!]! @relation(name: "ListKnobsOnPedal" onDelete: CASCADE)
}

type Knob {
  id: ID! @unique
  type: String!
  description: String!
  color: String
  cx: Float
  cy: Float
  r: Float
  angle: Float
  width: Float
  pedal: Pedal @relation(name: "ListKnobsOnPedal")
  patches: [Patch!]! @relation(name: "PatchKnob" onDelete: CASCADE)
}

type Patch {
  id: ID! @unique
  preset: Preset @relation(name: "PresetPatch")
  knob: Knob @relation(name: "PatchKnob")
  angle: Float!
  notes: String @default(value: "")
}

type Preset {
  id: ID! @unique
  user: User
  pedal: Pedal
  name: String! @default(value: "")
  description: String! @default(value: "")
  patches: [Patch!]! @relation(name: "PresetPatch" onDelete: CASCADE)
}
